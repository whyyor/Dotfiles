# Can't use meh as 3 keys somehow can't be pressed
shift + ctrl - down: yabai -m window --focus south 
shift + ctrl - up: yabai -m window --focus north
shift + ctrl - left: yabai -m window --focus west
shift + ctrl - right: yabai -m window --focus east

hyper - down: yabai -m window --swap south
hyper - up: yabai -m window --swap north
hyper - left: yabai -m window --swap west
hyper - right: yabai -m window --swap east

meh - r: yabai -m space --rotate 270
meh - x: yabai -m space --mirror y-axis
meh - y: yabai -m space --mirror x-axis

meh - q: yabai -m window --toggle float --grid 4:4:1:1:2:2

meh - 1  : yabai -m display --focus 1
meh - 2  : yabai -m display --focus 2
meh - 3  : yabai -m display --focus 3


meh - 0: yabai --start-service
hyper - 0: yabai --stop-service

